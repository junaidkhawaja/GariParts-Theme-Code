<div class="about_us_img_txt_container">
  <div class="about_us_contenarea">
    <div class="about_us_textarea">
      <div class="about_us_imgheading">
        {{ section.settings.about_us_imgheading }}
      </div>
      <div class="about_us_text">
        {{ section.settings.about_us_text }}
      </div>
    </div>
    <div class="aboutus_image">
      <img src="{{ section.settings.aboutus_image | img_url: 'master' }}">
    </div>
  </div>
</div>
<style>
        .about_us_contenarea{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        width: 100%;
        max-width: 1440px;
        justify-content: space-around;
        margin: 0 auto;
        padding:{{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
        background-color:{{ section.settings.background_color }};
        }

        .about_us_textarea{
            width: 55%;
        }
        .aboutus_image {
        width: 35%;

        }
      .aboutus_image img {
        width: 100%;
        
    }

    .about_us_imgheading p{
        color:{{ section.settings.about_img_heading_color }};
        font-size:{{ section.settings.about_img_heading_font_size  }}px;
        font-weight:{{ section.settings.about_img_heading_font_weight }};
        line-height: 1;
        font-family: Lato; 
        font-style: normal; 
        }
  .about_us_imgheading {

       margin-bottom:{{ section.settings.about_img_heading_margin_bottom}}px;
    }

      .about_us_text p{
      color:{{ section.settings.about_us_text_color }};
      font-size:{{ section.settings.about_us_text_font_size  }}px;
      font-weight:{{ section.settings.about_us_text_font_weight }};
      letter-spacing: -1px;
      line-height: normal;
      font-family: Lato; 
      }
  @media screen and (max-width: 768px){


        .about_us_contenarea{
        padding:{{ section.settings.padding_top_mobile }}px {{ section.settings.padding_right_mobile }}px {{ section.settings.padding_bottom_mobile }}px {{ section.settings.padding_left_mobile }}px;

       }


        .about_us_textarea {
        width: 100%;
        text-align: center;
        margin-bottom: {{ section.settings.about_us_textarea }}px ;

      }
      .aboutus_image {
        width: 100%;

        }

    .about_us_imgheading p{

         font-size:{{ section.settings.heading_font_size_mobile }}px;
    }
         .about_us_text p{
          font-size:{{ section.settings.paragraph_font_size_mobile  }}px;
          letter-spacing: -1px;
        ;
          }

  }
</style>

