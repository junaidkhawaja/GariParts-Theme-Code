<div class="{{ section.id }}">
  <div class="slider_container">
    <div class="slider_textarea">
      <div class="slider_heading">
        <h1>
          {{ section.settings.slider_heading }}
        </h1>
      </div>

      <div class="slider_paragraph">
        <div class="sliderPara">{{ section.settings.slider_paragraph_text1 }}</div>
      </div>
    </div>
    <div class="all_brand_logo">
      {% for block in section.blocks %}
        <div class="brand_logos">
          <img src="{{ block.settings.brand_logos | img_url: 'master' }}">
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<style>
            .slider_container{
             background-color:{{  section.settings.slider_container_background_color }};
             padding-top:{{ section.settings.slider_container_padding_top_desktop }}px;
             padding-bottom:{{ section.settings.slider_container_padding_bottom_desktop }}px;
             padding-left:{{ section.settings.slider_container_padding_left_desktop }}px;
             padding-right:{{ section.settings.slider_container_padding_right_desktop }}px;
             max-width: 1440px;
             width: 100%;
             margin: 0 auto;

            }



            .slider_heading h1{
              color:{{ section.settings.slider_heading_color }};
              font-size:{{ section.settings.slider_heading_font_size_desktop }}px;
              font-weight:{{ section.settings.slider_heading_font_weight }};
              font-family: 'Poppins', sans-serif;
              text-align:center;
              margin-bottom: {{ section.settings.slider_heading_margin_bottom_desktop }}px;
            }
            .slider_heading h1 p{
              letter-spacing: -1px;
            }
            .slider_heading h1 p strong{
              letter-spacing: -1px;
            }


          .slider_paragraph .sliderPara{
            max-width: 750px;
            margin: 0 auto;
            color:{{ section.settings.slider_paragraph_color }};
            font-size:{{ section.settings.slider_paragraph_font_size_desktop }}px;
            font-weight:{{ section.settings.slider_paragraph_font_weight }};
            font-family: 'Poppins', sans-serif;
            text-align:center;
            margin-bottom: {{ section.settings.slider_paragraph_margin_bottom_desktop }}px;
          }
          .slider_paragraph .sliderPara{
            line-height: 120%;
          }
       .slider_textarea {

          width: 100%;
          margin: 0 auto;
      }



    .all_brand_logo img{
      filter: grayscale(1) !important;
      max-width: 120px;
      margin: 0 auto;
      }

    .all_brand_logo img:hover{
        filter: grayscale(0) !important;
    }
  .{{ section.id }} .slick-initialized .slick-slide{
    display: flex !important;
    align-items: center;
    justify-content: center;
  }




        :
  @media screen and (max-width: 1023px){

          .slider_heading h1{

              font-size:{{ section.settings.slider_heading_font_size_tablet }}px;
            }
           .slider_paragraph .sliderPara{
            font-size:{{ section.settings.slider_paragraph_font_size_tablet }}px;

          }

  }

          @media screen and (max-width: 767px) {

            .slider_container{

             padding-top:{{ section.settings.slider_container_padding_top_mobile }}px;
             padding-bottom:{{ section.settings.slider_container_padding_bottom_mobile }}px;
             padding-left:{{ section.settings.slider_container_padding_left_mobile }}px;
             padding-right:{{ section.settings.slider_container_padding_right_mobile }}px;
             }

            .slider_heading h1{

              font-size:{{ section.settings.slider_heading_font_size_mobile }}px;
              margin-bottom: {{ section.settings.slider_heading_margin_bottom_mobile }}px;
            }

            .slider_paragraph .sliderPara{
            font-size:{{ section.settings.slider_paragraph_font_size_mobile }}px;
            margin-bottom: {{ section.settings.slider_paragraph_margin_bottom_mobile }}px;
          }
          }

     .slider_heading  strong{
        position:relative;
        font-weight:{{ section.settings.slider_heading_font_weight }};
       }

  .slider_heading strong:after {
          width: 100%;
          height: {{ section.settings.slider_heading_underline_thickness }}px;
          display: block;
          position: absolute;
          content: '';
          background-color: {{ section.settings.slider_heading_underline_color }};
          right: 0px;
  }
   @media screen and (max-width: 767px) {
     .slider_heading strong:after {
       content: none;
     }
   }
</style>
<script type="text/javascript">
   $(document).ready(function() {
    setTimeout(() => {
  $('.all_brand_logo').slick({



    slidesToShow: 6,
    slidesToScroll: 1,
     autoplay: {{ section.settings.slick_autoplay }},
    speed: {{ section.settings.slick_autoplay_speed }},
    dots: {{ section.settings.slick_dots }},
    arrows: {{ section.settings.slick_arrow }},
    autoplaySpeed: 0,
    cssEase: 'linear',
     responsive: [

    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 4,
        slidesToScroll: 3,
         speed: 4000

      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 2,
         speed: 4000
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1,
         speed: 4000
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
  });
      }, 1500)
  
  });
</script>

