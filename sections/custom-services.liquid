<div class="{{ section.id }}">
  <div class="all_collection">
    {% for block in section.blocks %}
      <a class="collection_block_slide" href="{{ block.settings.collection_block_link }}">
        <div class="collection_image"><img src="{{ block.settings.collection_image | img_url: 'master' }}"></div>
        <div class="collection_link_text">{{ block.settings.collection_link_text }}</div>
      </a>
    {% endfor %}
  </div>
</div>

<style>
               .all_collection{
                           background-color:{{  section.settings.all_collection_background_color }};
                           padding-top:{{ section.settings.all_collection_padding_top_desktop }}px;
                           padding-bottom:{{ section.settings.all_collection_padding_bottom_desktop }}px;
                           padding-left:{{ section.settings.all_collection_padding_left_desktop }}px;
                           padding-right:{{ section.settings.all_collection_padding_right_desktop }}px;
                           display: flex;
                           justify-content: space-between;
                           width: 100%;
                 max-width: 1440px;
                margin: 0 auto;
                           }

               .collection_block_slide {
                           color:{{ section.settings.collection_block_slide_text_color }};
                           background-color:{{ section.settings.collection_block_slide_text_bg_color }};
                           font-size:{{ section.settings.collection_block_slide_text_font_size_desktop }}px;
                           font-weight:{{ section.settings.collection_block_slide_text_font_weight }};
                           text-decoration: none;
                           display: flex !important;
                           margin-right: 10px;
                           margin-left: 10px;
                           width: 325px;
                           padding: 10px 20px;
                           font-family: 'Lato', sans-serif; 
                           align-items: center;
                           }

                .collection_block_slide:hover{
                           color:{{ section.settings.collection_block_slide_text_color_hover }};
                           background-color:{{ section.settings.collection_block_slide_text_bg_color_hover }};
                           }


                .collection_image img{
                           margin-right: 20px;
                           display:block ;
                           width: 50px !important;
                           }








               .all_collection .slick-list{
                            padding:20px 0px;
                            }

  @media screen and (max-width: 1000px){

               .all_collection{
                             padding-top:{{ section.settings.all_collection_padding_top_mobile }}px;
                             padding-bottom:{{ section.settings.all_collection_padding_bottom_mobile }}px;
                             padding-left:{{ section.settings.all_collection_padding_left_mobile }}px;
                             padding-right:{{ section.settings.all_collection_padding_right_mobile }}px;
                             }

                .collection_block_slide {
                             font-size:{{ section.settings.collection_block_slide_text_font_size_mobile }}px;
                             }
</style>

<script type="text/javascript">
  $(document).ready(function() {
    setTimeout(() => {

  $('.all_collection').slick({
    slidesToShow: 4,
    slidesToScroll: 1,
     autoplay: {{ section.settings.slick_autoplay }},
    dots: {{ section.settings.slick_dots }},
    arrows: {{ section.settings.slick_arrow }},
    autoplaySpeed: {{ section.settings.slick_autoplay_speed }},
    cssEase: 'linear',
     responsive: [

    {
      breakpoint: 1100,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 3,

      }
    },
    {
      breakpoint: 767,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2,
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1,
      }
    }
   
  ]
  });
}, 1500)
  
  });

</script>

